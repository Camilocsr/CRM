generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Rol {
  ADMIN
  AGENTE
}

model Agente {
  id        Int      @id @default(autoincrement())
  nombre    String
  correo    String   @unique
  rol       Rol      @default(AGENTE)
  leads     Lead[]   @relation("AgenteLeads")
}

model TipoGestion {
  id           Int      @id @default(autoincrement())
  tipoGestion  String   @unique
  leads        Lead[]   @relation("TipoGestionLeads")
}

model Lead {
  id                Int       @id @default(autoincrement())
  nombre            String?
  numeroWhatsapp    String    @unique
  conversacion      String?   @db.Text   // Cambiar de String a Text
  idAgente          Int?      @map("id_agente")
  idTipoGestion     Int?      @map("id_tipo_gestion")
  agente            Agente?   @relation("AgenteLeads", fields: [idAgente], references: [id])
  tipoGestion       TipoGestion? @relation("TipoGestionLeads", fields: [idTipoGestion], references: [id])
  urlPhotoPerfil    String?
}